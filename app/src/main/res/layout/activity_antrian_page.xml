<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".AntrianPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:orientation="vertical">

        <TextView
            android:id="@+id/judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="ANTRIAN\nSAAT INI"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="40dp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/relativelayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/judul"
            android:layout_marginHorizontal="50dp">

            <TextView
                android:id="@+id/nomorantriansaatini"
                android:text="0"
                android:textSize="90dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <TextView
            android:id="@+id/judulnoanda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:text="ANTRIAN ANDA"
            android:textColor="@android:color/black"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/noantrian"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/judulnoanda"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="50dp"
            android:text="80"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="40dp" />

        <TextView
            android:id="@+id/estimasijudul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/noantrian"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="ESTIMASI"
            android:textColor="@android:color/black"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/estimasiwaktu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/estimasijudul"
            android:layout_marginHorizontal="50dp"
            android:text="50 Menit"
            android:textAlignment="center"
            android:textColor="@android:color/black"
            android:textSize="30dp" />

    </LinearLayout>

    <Button
        android:id="@+id/bayar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="50dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/mybutton2"
        android:text="BAYAR"
        android:textColor="@android:color/black" />
</RelativeLayout>