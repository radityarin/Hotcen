<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AntriObatPage">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="100dp"
        android:layout_marginHorizontal="30dp"
        android:paddingVertical="20dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/frame">
    <TextView
        android:layout_width="match_parent"
        android:id="@+id/judulantriobat"
        android:textColor="@android:color/white"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="Nomor Antrian\nPengambilan Obat\n Saat ini"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/noantrianobatsaatini"
        android:layout_below="@id/judulantriobat"
        android:text="2"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textSize="100dp"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="match_parent"
        android:textSize="30dp"
        android:id="@id/judulantriobat"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="Nomor Anda"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:id="@+id/noantrianobat"
        android:layout_below="@id/judulantriobat"
        android:text="5"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="50dp"
        android:layout_height="wrap_content" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp">
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/mybutton"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="30dp"
        android:text="selesai"
        android:id="@+id/homebutton"
        android:textColor="@android:color/white"
        android:textSize="20dp"
        />
    </RelativeLayout>
</LinearLayout>