<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".WaitingPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="30dp"
            android:textAlignment="center"
            android:text="Silahkan ke Poli Gigi"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kamis, 22 November 2018"
            android:textSize="20dp"
            android:textAlignment="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="13:00 - 17:00"
            android:textAlignment="center"/>
        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="@drawable/frame"
            android:layout_marginHorizontal="30dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/judul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="ANTRIAN\nSAAT INI"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="40dp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/relativelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/judul"
                android:layout_marginHorizontal="50dp">

                <TextView
                    android:id="@+id/nomorantriansaatini"
                    android:text="0"
                    android:textSize="90dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>

            <TextView
                android:id="@+id/judulnoanda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="ANTRIAN ANDA"
                android:textColor="@android:color/white"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/noantrian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/judulnoanda"
                android:layout_centerHorizontal="true"
                android:layout_marginHorizontal="50dp"
                android:text="4"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="40dp" />

            <TextView
                android:id="@+id/estimasijudul"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/noantrian"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:text="ESTIMASI"
                android:textColor="@android:color/white"
                android:textSize="30dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/estimasiwaktu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/estimasijudul"
                android:layout_marginHorizontal="50dp"
                android:text="50 Menit"
                android:textAlignment="center"
                android:layout_marginBottom="10dp"
                android:textColor="@android:color/white"
                android:textSize="30dp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>