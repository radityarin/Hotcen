<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorLogo</item>
        <item name="colorPrimaryDark">@color/colorLogo</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MeterNumberPickerStyle">
        <item name="mnp_min">0</item>
        <item name="mnp_max">2</item>
        <item name="mnp_textColor">@color/colorPrimary</item>
        <item name="mnp_textSize">50sp</item>
        <item name="mnp_paddingHorizontal">5dp</item>
        <item name="mnp_paddingVertical">25dp</item>
    </style>

    <style name="MeterViewStyle">
        <item name="mv_firstColor">@android:color/white</item>
        <!--<item name="mv_numberOfFirst">5</item>-->
        <!--<item name="mv_numberOfSecond">1</item>-->
        <item name="mv_pickerStyle">@style/MeterNumberPickerStyle</item>
        <item name="mv_secondColor">@android:color/white</item>
    </style>


    <style name="MyTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:titleTextStyle">@style/TitleBarTextColor</item>
        <item name="android:background">@color/colorLogo</item>
    </style>

    <style name="TitleBarTextColor" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorLogo</item>
    </style>
</resources>

